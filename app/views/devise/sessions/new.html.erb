<div class="contents">
  <div class="container">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :nickname, class: "labelName" %>
        <%= f.text_field :nickname, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :email, class: "labelName" %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, class: "labelName" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me, class: "labelName" %>
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class: "loginBtn" %>
      </div>
    <% end %>
  </div>
</div>