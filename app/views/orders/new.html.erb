<div class="contents">
  <div class="container">
    <%= form_with(model: @order, local: true) do |form| %>
    <%= render 'shared/error_messages', model: form.object %>
    <div class="field">
      <%= form.label :date, "カード利用日", class: "labelTitle" %>
      <%= form.date_select :date, {discard_year: true, class:"dateSelect"} %>
    </div>
    <div class="field">
      <%= form.label :amount, "利用額", class: "labelTitle" %>
      <%= form.text_field	:amount %>
    </div>
    <div class="field">
      <%= form.label :category_id, "カテゴリー", class: "labelTitle" %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"orderSelect", id:"order-category"}) %>
    </div>
    <div class="field">
      <%= form.label :memo, "memo", class: "labelTitle" %>
      <%= form.text_field :memo, placeholder: "memo", class:"memo" %>
    </div>
    <div class="actions">
      <%= form.submit "登録", class: "orderBtn" %>
    </div>
    <% end %>
  </div>
</div>